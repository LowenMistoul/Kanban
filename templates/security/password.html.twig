{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="glass">
        <div style="display:flex;justify-content: center;align-items:center">
            <h1 style="text-align:center;">Mise à jour du mot de passe</h1>
            <br/>
            <br/>
            <div style="width:25vh;margin:0 auto;">
                <div style="display:flex;flex-direction:column;" class="mb-3">
                    <label for="ticketName" class="form-label">Mot de passe</label>
                    {{ form_row(form.password.first) }}
                </div>
                <div style="display:flex;flex-direction:column;" class="mb-3">
                    <label for="description" class="form-label">Répeter mot de passe</label>
                    {{ form_row(form.password.second) }}
                </div>
                <br/>
            <div>
            <div style="display:flex;justify-content: center;">
                <button style="width: 250px;margin:0 auto;" class="btn btn-lg btn-primary" type="submit">Changer mot de passe</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}