{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div style="display:flex;justify-content: center;align-items:center;height:800px;">
        <div>
            <br/>
            <h1 style="text-align:center;">Informations</h1>
            <br/>
            {{ form_row(form.userName) }}
            <br/>
            {{ form_row(form.email) }}
            <br/>

        <a href="/updatePassword" style="display:flex;justify-content: center;">
                <button style="width: 150px;margin:0 auto;" class="btn btn-lg btn-primary" type="submit">Changer de mot de passe</button>
            </a>

            <br/>
            <div style="display:flex;justify-content: center;">
                <button style="width: 150px;margin:0 auto;" class="btn btn-lg btn-primary" type="submit">Update</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}